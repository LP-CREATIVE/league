{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@league/shared/*": ["packages/shared/src/*"],
      "@league/shared": ["packages/shared/src/index.ts"],
      "@league/llm-clients/*": ["packages/llm-clients/src/*"],
      "@league/llm-clients": ["packages/llm-clients/src/index.ts"]
    },
    "outDir": "dist"
  }
}
